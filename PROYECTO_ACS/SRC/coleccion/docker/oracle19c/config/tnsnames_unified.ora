PRIMARY = ORCL
PRINCIPAL = ORCL
STANDBY = STBY
SECUNDARIA = STBY

# ------------------------------------------
# LOAD BALANCING / FAILOVER
# ------------------------------------------

DATAGUARD_CLUSTER =
  (DESCRIPTION =
    (ADDRESS_LIST =
      (ADDRESS = (PROTOCOL = TCP)(HOST = oracle-primary)(PORT = 1521))
      (ADDRESS = (PROTOCOL = TCP)(HOST = oracle-standby)(PORT = 1521))
    )
    (CONNECT_DATA =
      (SERVER = DEDICATED)
      (SERVICE_NAME = ORCL)
      (FAILOVER_MODE = 
        (TYPE = SELECT)
        (METHOD = BASIC)
        (RETRIES = 5)
        (DELAY = 10)
      )
      (LOAD_BALANCE = ON)
    )
  )

